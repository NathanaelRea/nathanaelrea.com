---
import Layout from "../layouts/Layout.astro";
import ImageContainer from "../layouts/ImageContainer.astro";
import OptimizedImage from "../components/OptimizedImage.astro";
import bell from "../assets/Art/BELL.png";
import eun from "../assets/Art/mac_n_eun.png";
import margot from "../assets/Art/margot.png";
import sunshine from "../assets/Art/ray_of_sun.png";
import smash from "../assets/Art/Super_Smash_Bros_Mute.png";
import unwise from "../assets/Art/UNWISE.png";
---

<Layout title="Art">
  <ImageContainer>
    <OptimizedImage src={margot} alt="Margot" />
    <OptimizedImage src={eun} alt="Mac and Eun" />
    <OptimizedImage src={sunshine} alt="Ray of Sunshine" />
    <OptimizedImage src={bell} alt="BELL" />
    <OptimizedImage src={smash} alt="Super Smash Bros Mute" />
    <OptimizedImage src={unwise} alt="UNWISE" />
  </ImageContainer>
</Layout>
